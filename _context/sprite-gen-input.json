{
  "character": {
    "type": "fox",
    "default_personality": "happy",
    "base_sprite": "fox_base.png",
    "art_style": "cute_animal_pixel_art",
    "motion_style": "deliberate retro game feel, low frame rate"
  },
  "constraints": {
    "sprite_frame": {
      "width": 256,
      "height": 256,
      "pixel_scale": 1,
      "pixel_aliasing": false,
      "palette_locked": true
    },
    "new_pixels_outside_silhouette": false,
    "subpixel_movement": false,
    "consistent_character_proportions": true,
    "character_origin": "bottom_edge, center_alignment",
    "symmetry": {
      "horizontal_flip_allowed": true,
      "vertical_flip_allowed": false
    },
    "color": {
      "description:": "classic 8-bit, limited number of base colors",
      "high_contrast": true,
      "allowed_levels": ["base", "highlight", "shadow", "outline"],
      "description": "only 1 highlight and shadow allowed per base color",
      "outline": {
        "color": "black",
        "thickness_px": 1
      },
      "base_sprite": "fox_base.png"
    },
    "animation_sequence": {
      "idle_stand": {
        "description": "Standing in place, subtle movements",
        "frames_per_second": 8,
        "seconds_per_frame": 0.05,
        "loop": true,
        "allowed_movements": ["eyes_blink", "ears_twitch", "tail_sways"]
      },
      "idle_sit": {
        "description": "Sitting, back facing the camera, watching tv",
        "frames_per_second": 8,
        "seconds_per_frame": 0.05,
        "loop": true,
        "allowed_movements": ["tail wagging", "ears_twitch"]
      },
      "sleeping": {
        "description": "Sleeping on ground, horizontal, character facing camera, snoring, slow breathing",
        "frames_per_second": 8,
        "seconds_per_frame": 0.05,
        "loop": true,
        "allowed_changes": [
          "eyes closed",
          "mouth breathing",
          "floating Zzz letters"
        ]
      },
      "dancing": {
        "description": "Dancing in place, wearing cool sun glasses",
        "frames_per_second": 12,
        "seconds_per_frame": 0.005,
        "loop": true,
        "allowed_changes": [
          "arms upward, shifting up and down",
          "lower body shifting side-to-side",
          "mouth opens to sing"
        ]
      }
    },
    "export specs": {
      "single_sprite_sheet": {
        "layout": "row_per_animation_sequence",
        "padding_px": 0,
        "background": "transparent"
      },
      "file_name": "sprite_sheet_fox_gen"
    }
  }
}
